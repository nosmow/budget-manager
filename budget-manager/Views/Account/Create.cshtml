@model CreationAccountViewModel

@{
    ViewData["Title"] = "Crear cuenta";
}

<div class="w-50 m-auto">
    <h1 class="fs-4">Crear cuenta</h1>
    <p class="fw-light mb-4">
        La cuenta se refiere a los distintos balances que tienes:
        tarjeta de crédito, cuenta de ahorros, préstamos, etc.
    </p>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating mb-4">
            <input asp-for="Name" class="form-control" placeholder="Nombre">
            <label asp-for="Name">Nombre</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-floating mb-4">
            <select class="form-select" asp-for="AccountTypeId" asp-items="Model.AccountType"></select>
            <label asp-for="AccountTypeId">Tipo cuenta</label>
            <span asp-validation-for="AccountTypeId" class="textda"></span>
        </div>

        <div class="form-floating mb-4">
            <input asp-for="Balance" class="form-control" placeholder="Balance">
            <label asp-for="Balance">Balance</label>
            <span asp-validation-for="Balance" class="text-danger"></span>
        </div>

        <div class="form-floating mb-4">
            <textarea asp-for="Description" class="form-control"></textarea>
            <label asp-for="Description">Descripción</label>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn_primary">Guardar</button>
        </div>
    </form>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}