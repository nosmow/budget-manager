@model IEnumerable<IndexAccountViewModel>

@{
    ViewData["Title"] = "Cuentas";

    string FormatBalance(decimal balance)
    {
        return Math.Abs(balance).ToString("N");
    }

    string GetClassBalance(decimal balance)
    {
        return balance >= 0 ? "active" : "pasive";
    }
}

<div class="d-flex justify-content-between mb-4">
    <h1 class="fs-4">Cuentas</h1>
    <a asp-action="Create" class="btn btn_primary mb-3">Crear nuevo</a>
</div>

<div class="container-totals mb-4">
    <div>
        <div>
            <strong>Activo</strong>
        </div>
        <div class="active">
            @FormatBalance(@Model.Where(x => x.Balance > 0).Sum(x => x.Balance))
        </div>
    </div>
    <div>
        <div>
            <strong>Pasivos</strong>
        </div>
        <div class="pasive">
            @FormatBalance(@Model.Where(x => x.Balance < 0).Sum(x => x.Balance))
        </div>
    </div>
    <div>
        <div>
            <strong>Total</strong>
        </div>
        <div>
            @FormatBalance(@Model.Sum(x => x.Balance))
        </div>
    </div>
</div>

<div class="accordion accordion-account">
    @foreach (var accountType in Model)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="headerOne">
                @{
                    var id = accountType.AccountType.Replace(" ", "");
                    var dataBSTarget = "#" + id;
                    var classAccountType = GetClassBalance(accountType.Balance);
                }
                <button class="accordion-button bg_accordion" type="button" data-bs-toggle="collapse"
                data-bs-target="@dataBSTarget">
                <span class="me-3">
                    <span class="text_color"><strong>@accountType.AccountType</strong></span>
                    <span class="@classAccountType">@FormatBalance(accountType.Balance)</span>
                </span>
            </button>
            </h2>
            <div id="@id" class="accordion-collapse collapse show">
                <div>
                    <ul class="list-group">
                        @foreach (var account in accountType.Accounts)
                        {
                            var accountClass = GetClassBalance(account.Balance);
                            <li class="list-group-item">
                                <span>
                                    <span class="span_name">@account.Name</span>
                                    <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn_primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@account.Id" class="btn btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </span>
                                <span class="@accountClass">@FormatBalance(account.Balance)</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>