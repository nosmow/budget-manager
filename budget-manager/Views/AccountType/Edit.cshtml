@model AccountType

@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

<div class="w-50 m-auto">
    <h1 class="fs-4 mb-4">Editar Tipo Cuenta: @Model.Name</h1>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id"/>
        <div class="form-floating mb-4">
            <input type="text" asp-for="Name" class="form-control" placeholder="Nombre">
            <label asp-for="Name">Nombre</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a class="btn btn-secondary px-3" asp-action="Index">Cancelar</a>
            <button type="submit" class="btn btn_primary px-3">Guardar</button>
        </div>
    </form>
</div>

           

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
