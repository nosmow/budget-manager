@model IEnumerable<AccountType>

@{
    ViewData["Title"] = "Tipos Cuentas";
}

<div class="d-flex flex-wrap justify-content-between align-items-center">
    <div>
        <h1 class="fs-4">Tipo de Cuentas</h1>
        <p class="fw-light">El tipo de cuenta se refiere a cómo podemos agrupar cuentas. Ejemplo: Préstamos, tarjetas de crédito, etc.</p>
    </div>

    <div class="d-flex justify-content-end mb-4">
        <a asp-action="Create" class="btn btn-light mb-3">Crear nuevo</a>
    </div>
</div>

<table class="table table-sm table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th scope="col" class="py-2">Nombre</th>
            <th scope="col" class="py-2">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var accountType in Model) {
            <tr>               
                <td>
                    @accountType.Name
                </td>
                <td class="col-sm-4 col-md-2">
                    <a class="btn btn-light" asp-action="Edit" asp-route-id="@accountType.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>