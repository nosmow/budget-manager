<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Budget Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/budget_manager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/scroll.css" asp-append-version="true" />
    <link rel="stylesheet" href="budget-manager.styles.css" asp-append-version="true" />
</head>
<body >
    <div class="main-container d-flex">
        <div class="sidebar" id="side_nav">
            <div class="header-box px-2 pt-3 pb-4 d-flex justify-content-between">
                <h1 class="fs-4 px-2">Budget Manager</h1>
                <button class="btn d-md-none d-block close-btn px-1 py-0">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <ul id="ul_sidebar" class="list-unstyled px-2">
                <li class="@{
                    if(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() != "**"){
                        <text>side_active</text>
}
}">
                    <a class="text-decoration-none px-3 py-2 d-block" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-bar-chart"></i> Principal
                    </a>
                </li>
                <li class="@{
                    if(ViewContext.RouteData.Values["Controller"].ToString() == "AccountType" && ViewContext.RouteData.Values["Action"].ToString() != "**"){
                        <text>side_active</text>
}
}">
                    <a class="text-decoration-none px-3 py-2 d-block" asp-controller="AccountType" asp-action="Index">
                        <i class="bi bi-bookmark-plus"></i> Tipos Cuentas
                    </a>
                </li>
                <li class="@{
                    if(ViewContext.RouteData.Values["Controller"].ToString() == "Account" && ViewContext.RouteData.Values["Action"].ToString() != "**"){
                        <text>side_active</text>
}
}">
                    <a class="text-decoration-none px-3 py-2 d-block" asp-controller="Account" asp-action="Index">
                        <i class="bi bi-piggy-bank"></i> Cuentas
                    </a>
                </li>
                <li class="@{
                    if(ViewContext.RouteData.Values["Controller"].ToString() == "Category" && ViewContext.RouteData.Values["Action"].ToString() != "**"){
                            <text>side_active</text>
}
}">
                    <a class="text-decoration-none px-3 py-2 d-block" asp-controller="Category" asp-action="Index">
                        <i class="bi bi-piggy-bank"></i> Categorías
                    </a>
                </li>
            </ul>
            <hr class="h-color mx-2">
        </div>
        <div class="content w-100">
            <nav class="navbar navbar-expand-md">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between d-md-none d-block">
                        <button class="btn px-1 py-0 open-btn me-2"><i class="fa-solid fa-bars"></i></button>
                    </div>              

                    <div class="flex-row flex-wrap ms-md-auto">
                        <div class="dropdown">
                            <button class="btn btn-link nav-link py-2 px-0 px-lg-2 dropdown-toggle d-flex align-items-center" type="button" id="bd-theme" aria-expanded="false" data-bs-toggle="dropdown" data-bs-display="static" aria-label="Tema">
                                <svg class="bi my-1 theme-icon-active d-none"><use href="#moon-stars-fill"></use></svg>
                                <span class="ms-2" id="bd-theme-text">Tema</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="bd-theme-text" data-bs-popper="static">
                                <li>
                                    <button type="button" class="btn_theme dropdown-item d-flex align-items-center" data-bs-theme-value="light" aria-pressed="false">
                                        <svg class="d-none"><use href="~/img/brightness-high-fill.svg"></use></svg>
                                        <i class="bi bi-brightness-high-fill bi me-2 opacity-50"></i>Claro
                                        <svg class="bi ms-auto d-none"><use href="#check2"></use></svg>
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="btn_theme dropdown-item d-flex align-items-center" data-bs-theme-value="dark" aria-pressed="true">
                                        <svg class="d-none"><use href="~/img/moon-stars-fill.svg"></use></svg>
                                        <i class="bi bi-moon-stars-fill bi me-2 opacity-50"></i>Oscuro
                                        <svg class="bi ms-auto d-none"><use href="#check2"></use></svg>
                                    </button>
                                </li>         
                            </ul>
                        </div>
                    </div>

                </div>
            </nav>
            <div id="container_main" class="container dashboard-content px-3 pt-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/e592da9494.js" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
